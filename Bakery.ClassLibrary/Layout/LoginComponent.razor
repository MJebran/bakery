@using System.Security.Claims
@using Bakery.WebApp.Authentication;
@using Bakery.WebApp.Data;
@using Bakery.ClassLibrary.Logic;
@using Microsoft.AspNetCore.Components.Authorization
@inherits LoginControlBase
@inject AuthenticationStateProvider AuthenticationStateProvider
@inject IBakeryAutheticationService _authenticationService

@if (User?.Identity?.Name != null)
{
    <img class="profile-pic" src="@Avatar"/>
    @* <b>@GivenName @Surname</b> *@
    <a href="/Identity/Logout" style="text-decoration: none; color: inherit;"
       target="_top">
        Logout
    </a>
}
else
{
    <a href="/Identity/Login"
       target="_top" style="text-decoration: none; color: inherit;">
        Login
    </a>
}
