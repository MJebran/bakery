@page "/luris"

<div class="Container">

    @*-----------------Location--------------------*@
    <div class="locationContainer">
        <div class="location"></div>
        <span class="locationText">Manti, Utah</span>
    </div>

    @*---------------------Frame----------------------*@
    <div class="frame">
            Frame
    </div>

    @*-----------------------Search Bar-------------------*@
    <div class="searchBar">
        <div class="InputContainer">
            <input placeholder="Search.." id="input" class="input" name="text" type="text">
        </div>
    </div>

    @*----------------Filter Categories---------------*@
    <div class="categories">Categories</div>
</div>

<style>
    .Container {
        background-color: rgba(240, 240, 240, 1); /* Ajusté el color para que sea legible */
        width: 100%;
        height: 100%;
        position: absolute;
        display: grid;
        grid-template-columns: repeat(2, 1fr); /* Dos columnas iguales */
        grid-template-rows: repeat(2, auto); /* Dos filas con altura automática */
        gap: 10px; /* Espacio entre las celdas */
    }

    .locationContainer {
        width: 292px;
        height: 38.33333206176758px;
        position: absolute;
        left: 26px;
        top: 99px;
    }

    .location {
        grid-column: 1 / span 2; /* Ocupa dos columnas */
        grid-row: 2; /* Está en la primera fila */
        background-color: rgba(35, 35, 35, 1);
        width: 26.83333396911621px;
        height: 38.33333206176758px;
        position: absolute;
        left: 0px;
        top: 0px;
    }

    .locationText {
        color: rgba(35, 35, 35, 1);
        width: 242px;
        height: 36px;
        position: absolute;
        left: 50px;
        top: 2px;
        font-family: Futura Bk BT;
        text-align: left;
        font-size: 30px;
        letter-spacing: 0;
    }


    .frame {
        grid-column: 1 / span 2; /* Ocupa dos columnas */
        grid-row: 2; /* Está en la primera fila */
        background-color: rgba(250.00000029802322, 232.00000137090683, 212.00000256299973, 1);
        width: 100%;
        height: 200px;
        position: absolute;
        top: 165px;
    }

    .searchBar{
        grid-column: 1 / span 2; /* Ocupa dos columnas */
        grid-row: 3; /* Está en la tercera fila */
        background-color: blue;
    }

    .InputContainer {
        width: 210px;
        height: 50px;
        display: flex;
        align-items: center;
        justify-content: center;
        background: linear-gradient(to bottom,rgb(227, 213, 255),rgb(255, 231, 231));
        border-radius: 30px;
        overflow: hidden;
        cursor: pointer;
        box-shadow: 2px 2px 10px rgba(0, 0, 0, 0.075);
    }

    .input {
        width: 200px;
        height: 40px;
        border: none;
        outline: none;
        caret-color: rgb(255, 81, 0);
        background-color: rgb(255, 255, 255);
        border-radius: 30px;
        padding-left: 15px;
        letter-spacing: 0.8px;
        color: rgb(19, 19, 19);
        font-size: 13.4px;
    }

    
    .categories {
        grid-column: 1 / span 2; /* Ocupa dos columnas */
        grid-row: 4; /* Está en la tercera fila */
        background-color: green;
    }
</style>


