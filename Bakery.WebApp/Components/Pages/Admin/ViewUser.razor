@using Bakery.ClassLibrary.Services
@using Bakery.WebApp.Data
@using Bakery.WebApp.Services
@using Bakery.ClassLibrary.Logic
@inherits ViewUserBase
@inject IUserService _userService
@inject NavigationManager _navigationManager
@rendermode InteractiveServer

<body>
    <div style="display: flex; justify-content: center; align-items: center; height: 100vh;">
        <div style="width: 80%; max-width: 600px; padding: 20px; background-color: #fff; box-shadow: 0px 2px 8px rgba(0, 0, 0, 0.1); border-radius: 8px;">

            <h3 style="text-align: center;">View Users</h3>

            <table class="table table-hover">
                <thead>
                    <tr>
                        <th scope="col">ID</th>
                        <th scope="col">User Name</th>
                        <th scope="col">User Email</th>
                        <th scope="col">User Role</th>
                        <th scope="col">Delete</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in users)
                    {
                        <tr>
                            <td>
                                @user.UserId
                            </td>
                            <td>
                                @user.UserName
                            </td>
                            <td>
                                @user.UserEmail
                            </td>
                            <td>
                                @user.UserRole.RoleName
                            </td>
                            <td>
                                <button type="button" class="btn btn-danger" @onclick="() => DeleteUser(user)">Delete User</button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        
        </div>
    </div>
</body>
